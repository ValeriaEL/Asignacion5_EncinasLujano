            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonMas"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="@color/azulLibre"
            android:onClick="cambiarOperador"
            android:text="+"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="@color/azulLavanda"
            android:onClick="seleccionarNumero"
            android:text="0"
            android:textAllCaps="false"
            android:textColor="@color/azulLibre"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonPunto"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="@color/azulLavanda"
            android:onClick="seleccionarNumero"
            android:text="."
            android:textAllCaps="false"
            android:textColor="@color/azulLibre"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonIgual"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="@color/azulLibre"
            android:onClick="igual"
            android:text="="
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="30sp" />

    </GridLayout>
</LinearLayout>